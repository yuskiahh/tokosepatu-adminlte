doctype html
html
	head
		title
			| #{title}
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport')
		link(rel='stylesheet', href='/adminlte/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/font-awesome/css/font-awesome.css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css')
		link(rel='stylesheet', href='/adminlte/dist/css/AdminLTE.min.css')
		link(rel='stylesheet', href='/adminlte/plugins/iCheck/square/blue.css')
		body.hold-transition.login-page(style="background: url('/adminlte/dist/img/toko_sepatu.png'); background-size:cover;")
			.login-box
				.login-logo
					a(href='#')
						b(style="color: white;")
							| Toko Sepatu Yuskiah
						br
					p.login-msg(style="font-size: 17px; color: white;")
						| Welcome!
				form(action="/register",method="post")
					- if (messages.msg_error) 
						.alert.alert-danger.alert-dismissable 
							button.close(type='button', data-dismiss='alert', aria-hidden='true') 
								| Ã—
							h4
								i.icon.fa.fa-ban
								| Alert! 
							| !{messages.msg_error}
					.form-group.has-feedback
						input(type="email",placeholder="Email",name="email").form-control(style="border-radius: 10px;")
						span.glyphicon.glyphicon-envelope.form-control-feedback
					.form-group.has-feedback
						input(type="password",placeholder="Password",name="password").form-control(style="border-radius: 10px;")
						span.glyphicon.glyphicon-lock.form-control-feedback
					.form-group.has-feedback
						input(type="text",placeholder="Username",name="nama").form-control(style="border-radius: 10px;")
						span.glyphicon.glyphicon-user.form-control-feedback
					.form-group.has-feedback
						input(type="text",placeholder="Phone",name="phone").form-control(style="border-radius: 10px;")
						span.glyphicon.glyphicon-phone.form-control-feedback
					.row
						.col-xs-4
						.col-xs-4
							button(type="submit").btn.btn-light.btn-block.btn-flat(style="border-radius: 10px; background-color: #B590CA; color: white;")
								| Sign Up
				.social-auth-links.text-center
				.col-xs-4
				a(href='/login').text-center(style="color: white;")
					|	Login to Your Account

script(type='text/javascript', src='/adminlte/plugins/jQuery/jquery-2.2.3.min.js')
script(type='text/javascript', src='/adminlte/bootstrap/js/bootstrap.min.js')
script(type='text/javascript', src='/adminlte/plugins/iCheck/icheck.min.js')
script(type='text/javascript', src='/adminlte/dist/js/login.js')